{
    "compilerOptions": {
        "target": "ES2017",
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "allowJs": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}